<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_gravity="center" android:orientation="vertical"
    android:weightSum="1"
    android:minWidth="500dp"
    android:minHeight="500dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit Item Below:"
        android:id="@+id/tvEdit0"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Task Name"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/tvEdit0"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etEdit0"
        android:elegantTextHeight="false"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Priority"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/etEdit0"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etEdit1"
        android:elegantTextHeight="false"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Due Date"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_below="@id/etEdit1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.16" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etEdit2"
        android:elegantTextHeight="false"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btEdit0"
        android:onClick="onSaveItem"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:id="@+id/BT01"
        android:onClick="toCancel"
        android:layout_alignTop="@+id/btEdit0" />

</LinearLayout>
